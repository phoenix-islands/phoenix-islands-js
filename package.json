{
  "name": "phoenix-islands",
  "description": "Library for creating islands of various frontend frameworks in Phoenix LiveView",
  "version": "0.1.31",
  "private": true,
  "author": "Phoenix Islands (https://example.com)",
  "repository": "https://github.com/phoenix-islands/phoenix-islands-js",
  "bugs": "https://github.com/phoenix-islands/phoenix-islands-js/issues",
  "license": "MIT",
  "keywords": [
    "phoenix",
    "live-view",
    "islands"
  ],
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev:all": "nx run-many -t dev",
    "build:all": "nx run-many -t build",
    "build:core": "nx build @phoenix-islands/core",
    "build:react": "nx build @phoenix-islands/react",
    "build:data": "nx build @phoenix-islands/data",
    "build:proxy": "nx build @phoenix-islands/proxy",
    "test:all": "nx run-many -t test",
    "coverage:all": "nx run-many -t coverage",
    "lint:all": "nx run-many -t lint",
    "format:all": "nx run-many -t format",
    "publish:all": "npm run build:all && lerna publish --no-private"
  },
  "devDependencies": {
    "doogu": "^3.2.10",
    "lerna": "^8.0.2",
    "nx": "17.2.8"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "eslintConfig": {
    "extends": "./node_modules/doogu/eslint"
  },
  "prettier": "doogu/prettier.json",
  "release": {
    "extends": "doogu/release.config.js"
  }
}
